{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":ignoreModulesAndTests",
    ":disableRateLimiting",
    ":semanticPrefixFixDepsChoreOthers",
    ":separateMultipleMajorReleases",
    ":timezone(Asia/Tokyo)",
    ":label(renovate)",
    "group:definitelyTyped",
    "group:monorepos",
    "group:linters",
    "group:recommended",
    "group:testNonMajor",
    "workarounds:all"
  ],
  "schedule": ["before 6am"],
  "packageRules": [
    {
      "extends": ["packages:linters", "packages:stylelint"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "groupName": "carbon-design-system",
      "matchPackageNames": ["/@carbon/"]
    },
    {
      "groupName": "icons",
      "matchPackageNames": ["/unplugin-icons/", "/@iconify/"]
    },
    {
      "groupName": "sveltekit",
      "matchPackageNames": ["svelte", "/@sveltejs/"]
    }
  ],
  "rangeStrategy": "bump"
}
